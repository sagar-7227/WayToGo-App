<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".Databases.magazineimages.second_news_of_magazine">

    <TextView
        android:id="@+id/txt_mgz_first_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:fontFamily="@font/muli_black"
        android:gravity="center"
        android:text="@string/ArguablyRight"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:paddingTop="45dp"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/rImage"
        android:layout_width="357dp"
        android:layout_height="222dp"
        android:layout_margin="30dp"
        />


    <TextView
        android:id="@+id/txt_mgz_first_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli_black"
        android:gravity="center"
        android:text="@string/ArguablyRight_desc"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp" />


    <Button
        android:id="@+id/gotolink"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="goToLink"
        android:text="Go To Site"
        android:textColor="@color/white" />

</LinearLayout>